---
import { AstroSeo } from "@astrolib/seo";

const siteUrl = "https://justfuckinguseastro.com";
const title = "Just Fucking Use Astro";
const description =
  "A public service announcement for developers still building websites like it's 2012 or shipping full SPAs for marketing sites. Most sites are content plus a few interactive bits. Just fucking use Astro.";
const seoImageAlt = "Just Fucking Use Astro - A rant about modern web development";
const facebookImage = `${siteUrl}/opengraph/facebook.png`;
const twitterImage = `${siteUrl}/opengraph/twitter.png`;
const openGraphImages = [
  {
    url: facebookImage,
    width: 1200,
    height: 630,
    alt: seoImageAlt,
    type: "image/png",
  },
  {
    url: twitterImage,
    width: 1200,
    height: 630,
    alt: seoImageAlt,
    type: "image/png",
  },
];

// JSON-LD Schema
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: title,
  url: siteUrl,
  description: description,
  author: {
    "@type": "Person",
    name: "Michael Andreuzza",
    url: "https://michaelandreuzza.com",
  },
  publisher: {
    "@type": "Person",
    name: "Michael Andreuzza",
    url: "https://michaelandreuzza.com",
  },
};
---

<AstroSeo
  title={title}
  description={description}
  canonical={siteUrl}
  openGraph={{
    url: siteUrl,
    title: title,
    description: description,
    images: openGraphImages,
    site_name: title,
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@mike_andreuzza",
    site: "@mike_andreuzza",
    cardType: "summary_large_image",
  }}
  additionalMetaTags={[
    { name: "twitter:image", content: twitterImage },
    { name: "twitter:image:alt", content: seoImageAlt },
  ]}
/>

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
